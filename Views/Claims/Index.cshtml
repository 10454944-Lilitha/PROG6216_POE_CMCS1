@model List<CMCS1.Models.Claim>
@{
    ViewData["Title"] = "Claim Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: #2c3e50; text-align: center;">Claim Dashboard</h2>
@if (!Model.Any())
{
    <p class="text-info text-center mt-4">No claims have been submitted yet.</p>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.Status</td>
                    <td>
                        @if (claim.Status == "Pending")
                        {
                            <a href="@Url.Action("UpdateClaim", new { id = claim.GetHashCode() })" class="btn btn-warning btn-sm">Update</a>
                        }
                        <a href="@Url.Action("TrackClaim", new { id = claim.GetHashCode() })" class="btn btn-info btn-sm ml-2">Track</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}