@model List<CMCS1.Models.Claim>
@{
    ViewData["Title"] = "Claim Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 style="color: #2c3e50;">Claim Dashboard - Lecturer</h2>
    <div>
        <a href="@Url.Action("SubmitClaim")" class="btn btn-primary btn-lg mr-2" style="background-color: #27ae60; border: none;">
            <i class="fas fa-plus"></i> Submit New Claim
        </a>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary">Logout</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <p class="text-muted" style="font-size: 1.2em;">No claims have been submitted yet.</p>
        <a href="@Url.Action("SubmitClaim")" class="btn btn-success btn-lg mt-3" style="background-color: #27ae60; border: none;">
            Submit Your First Claim
        </a>
    </div>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Feedback</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td><strong>@claim.TotalAmount.ToString("C")</strong></td>
                    <td>
                        <span class="badge badge-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : "warning")" style="color: black;">
                            @claim.Status
                        </span>
                    </td>
                    <td>
                        @if (claim.FeedbackList != null && claim.FeedbackList.Any())
                        {
                            <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewFeedbackModal-@claim.ClaimId">
                                <i class="fas fa-comments"></i> @claim.FeedbackList.Count
                            </button>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                    <td>
                        @if (claim.Status == "Pending")
                        {
                            <a href="@Url.Action("UpdateClaim", new { id = claim.ClaimId })" class="btn btn-warning btn-sm">Update</a>
                        }
                        <a href="@Url.Action("TrackClaim", new { id = claim.ClaimId })" class="btn btn-info btn-sm ml-2">Track</a>
                        <a href="@Url.Action("Delete", new { id = claim.ClaimId })" class="btn btn-danger btn-sm ml-2">Delete</a>
                    </td>
                </tr>

                @if (claim.FeedbackList != null && claim.FeedbackList.Any())
                {
                    <!-- View Feedback Modal -->
                    <div class="modal fade" id="viewFeedbackModal-@claim.ClaimId" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">
                                        <i class="fas fa-comments"></i> Feedback History
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    @foreach (var feedback in claim.FeedbackList.OrderByDescending(f => f.ReviewDate))
                                    {
                                        <div class="card mb-2">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between mb-2">
                                                    <strong class="text-primary">@feedback.ReviewedBy</strong>
                                                    <small class="text-muted">@feedback.ReviewDate.ToString("g")</small>
                                                </div>
                                                <p class="mb-0">@feedback.Message</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </tbody>
    </table>
}