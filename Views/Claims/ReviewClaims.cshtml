@model List<CMCS1.Models.Claim>
@{
    ViewData["Title"] = "Review Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: #2c3e50; text-align: center;">Pending Claims</h2>
@if (!Model.Any())
{
    <p class="text-info text-center mt-4">No pending claims at this time.</p>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Notes</th>
                <th>Documents</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@(string.IsNullOrEmpty(claim.Notes) ? "N/A" : claim.Notes)</td>
                    <td>@(string.Join(", ", claim.UploadedFileNames.Any() ? claim.UploadedFileNames : new[] { "None" }))</td>
                    <td>@claim.Status</td>
                    <td>
                        <form asp-action="ApproveClaim" method="post" style="display: inline;">
                            <input type="hidden" name="id" value="@claim.GetHashCode()" />
                            <button type="submit" name="action" value="Approve" class="btn btn-success mr-2">Approve</button>
                            <button type="submit" name="action" value="Reject" class="btn btn-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}