@{
    ViewData["Title"] = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="alert alert-success" role="alert">
        <h2 style="color: #27ae60;">✓ Claim Submitted Successfully!</h2>
        <p class="mt-3">Your claim has been submitted and is now pending review.</p>
    </div>
    <div class="mt-4">
        <a href="@Url.Action("SubmitClaim", "Claims")" class="btn btn-primary mr-2" style="background-color: #27ae60; border: none;">Submit Another Claim</a>
        <a href="@Url.Action("Index", "Claims")" class="btn btn-secondary">View All Claims</a>
    </div>
</div>