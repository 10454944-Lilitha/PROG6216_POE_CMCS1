@model CMCS1.Models.Claim
@{
    ViewData["Title"] = "Delete Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: #2c3e50; text-align: center;">Delete Claim</h2>

<div class="container mt-4">
    <div class="alert alert-warning" role="alert">
        <h4>Are you sure you want to delete this claim?</h4>
    </div>

    <div class="card p-4 shadow-sm" style="max-width: 600px; margin: 0 auto;">
        <dl class="row">
            <dt class="col-sm-4">Hours Worked:</dt>
            <dd class="col-sm-8">@Model.HoursWorked</dd>

            <dt class="col-sm-4">Hourly Rate:</dt>
            <dd class="col-sm-8">@Model.HourlyRate.ToString("C")</dd>

            <dt class="col-sm-4">Total Amount:</dt>
            <dd class="col-sm-8">@((Model.HoursWorked * Model.HourlyRate).ToString("C"))</dd>

            <dt class="col-sm-4">Notes:</dt>
            <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Notes) ? "N/A" : Model.Notes)</dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">
                <span class="badge badge-@(Model.Status == "Approved" ? "success" : Model.Status == "Rejected" ? "danger" : "warning")" style="color: black;">
                    @Model.Status
                </span>
            </dd>

            <dt class="col-sm-4">Submission Date:</dt>
            <dd class="col-sm-8">@Model.SubmissionDate.ToString("g")</dd>

            @if (Model.StatusUpdateDate.HasValue)
            {
                <dt class="col-sm-4">Last Updated:</dt>
                <dd class="col-sm-8">@Model.StatusUpdateDate?.ToString("g")</dd>
            }

            @if (Model.UploadedFileNames.Any())
            {
                <dt class="col-sm-4">Documents:</dt>
                <dd class="col-sm-8">
                    <ul class="list-unstyled">
                        @foreach (var file in Model.UploadedFileNames)
                        {
                            <li>@file</li>
                        }
                    </ul>
                </dd>
            }
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.ClaimId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Cancel</a>
        </form>
    </div>
</div>
