@{
    ViewData["Title"] = "Select User Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 style="color: #2c3e50; text-align: center; margin-bottom: 30px;">Welcome to Claims Management System</h2>
            <p class="text-center text-muted mb-4">Please select your role to continue</p>
            
            <div class="row">
                <!-- Lecturer Card -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="mb-3" style="font-size: 3em; color: #3498db;">
                                <i class="fas fa-chalkboard-teacher"></i>
                            </div>
                            <h4 class="card-title">Lecturer</h4>
                            <p class="card-text text-muted">Submit and manage your claims</p>
                            <ul class="list-unstyled text-left mt-3 mb-4" style="font-size: 0.9em;">
                                <li><i class="fas fa-check text-success"></i> Create Claims</li>
                                <li><i class="fas fa-check text-success"></i> Update Claims</li>
                                <li><i class="fas fa-check text-success"></i> View Claims</li>
                                <li><i class="fas fa-check text-success"></i> Delete Claims</li>
                            </ul>
                            <form asp-controller="Account" asp-action="SetRole" method="post">
                                <input type="hidden" name="role" value="Lecturer" />
                                <button type="submit" class="btn btn-primary btn-block" style="background-color: #3498db; border: none;">
                                    Login as Lecturer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Manager 1 Card -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="mb-3" style="font-size: 3em; color: #e74c3c;">
                                <i class="fas fa-user-tie"></i>
                            </div>
                            <h4 class="card-title">Manager 1</h4>
                            <p class="card-text text-muted">Review and approve claims</p>
                            <ul class="list-unstyled text-left mt-3 mb-4" style="font-size: 0.9em;">
                                <li><i class="fas fa-check text-success"></i> View All Claims</li>
                                <li><i class="fas fa-check text-success"></i> Approve Claims</li>
                                <li><i class="fas fa-check text-success"></i> Reject Claims</li>
                                <li><i class="fas fa-check text-success"></i> Provide Feedback</li>
                            </ul>
                            <form asp-controller="Account" asp-action="SetRole" method="post">
                                <input type="hidden" name="role" value="Manager1" />
                                <button type="submit" class="btn btn-danger btn-block" style="background-color: #e74c3c; border: none;">
                                    Login as Manager 1
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Manager 2 Card -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="mb-3" style="font-size: 3em; color: #9b59b6;">
                                <i class="fas fa-user-shield"></i>
                            </div>
                            <h4 class="card-title">Manager 2</h4>
                            <p class="card-text text-muted">Review and approve claims</p>
                            <ul class="list-unstyled text-left mt-3 mb-4" style="font-size: 0.9em;">
                                <li><i class="fas fa-check text-success"></i> View All Claims</li>
                                <li><i class="fas fa-check text-success"></i> Approve Claims</li>
                                <li><i class="fas fa-check text-success"></i> Reject Claims</li>
                                <li><i class="fas fa-check text-success"></i> Provide Feedback</li>
                            </ul>
                            <form asp-controller="Account" asp-action="SetRole" method="post">
                                <input type="hidden" name="role" value="Manager2" />
                                <button type="submit" class="btn btn-block" style="background-color: #9b59b6; border: none; color: white;">
                                    Login as Manager 2
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
        border: none;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2) !important;
    }
    .list-unstyled li {
        padding: 5px 0;
    }
</style>
