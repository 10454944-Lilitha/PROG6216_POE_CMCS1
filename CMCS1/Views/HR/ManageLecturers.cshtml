@model IEnumerable<CMCS1.Models.User>

@{
    ViewData["Title"] = "Manage Lecturers";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Lecturers</h1>
        <div>
            <a asp-action="CreateLecturer" class="btn btn-primary me-2">
                <i class="bi bi-person-plus-fill"></i> Add New Lecturer
            </a>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Hourly Rate</th>
                    <th>Username</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.HourlyRate?.ToString("C")</td>
                        <td>@item.Username</td>
                        <td>
                            <a asp-action="EditLecturer" asp-route-id="@item.UserId" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
