@model IEnumerable<CMCS1.Models.User>
@{
    ViewData["Title"] = "Manage All Users";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage All Users</h1>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <p class="text-muted mb-0">Total Users: <strong>@Model.Count()</strong></p>
        </div>
        <a asp-action="CreateUser" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i> Add New User
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Hourly Rate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <strong>@user.FullName</strong>
                    </td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>
                        @if (user.Role == "HR")
                        {
                            <span class="badge bg-danger">@user.Role (Super User)</span>
                        }
                        else if (user.Role == "Manager1" || user.Role == "Manager2")
                        {
                            <span class="badge bg-warning text-dark">@user.Role</span>
                        }
                        else
                        {
                            <span class="badge bg-info">@user.Role</span>
                        }
                    </td>
                    <td>
                        @if (user.HourlyRate.HasValue)
                        {
                            @user.HourlyRate.Value.ToString("C")
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
