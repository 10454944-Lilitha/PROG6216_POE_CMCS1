@model CMCS1.Models.User
@{
    ViewData["Title"] = "Create New User";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Create New User</h1>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>

    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> <strong>Note:</strong> After creating the user, provide them with their username and password for login. There is no self-registration in this system.
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-plus-fill"></i> User Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateUser" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="FullName" class="form-label"><strong>Full Name</strong></label>
                                    <input asp-for="FullName" class="form-control" placeholder="e.g., John Doe" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label"><strong>Email</strong></label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="e.g., john.doe@example.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Phone" class="form-label"><strong>Phone</strong></label>
                                    <input asp-for="Phone" class="form-control" placeholder="e.g., +27 123 456 7890" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Role" class="form-label"><strong>Role</strong></label>
                                    <select asp-for="Role" class="form-select" id="roleSelect">
                                        <option value="">-- Select Role --</option>
                                        <option value="Lecturer">Lecturer</option>
                                        <option value="Manager1">Manager 1 (Programme Coordinator)</option>
                                        <option value="Manager2">Manager 2 (Academic Manager)</option>
                                        <option value="HR">HR (Super User)</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3" id="hourlyRateGroup">
                            <label asp-for="HourlyRate" class="form-label"><strong>Hourly Rate</strong></label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" placeholder="e.g., 250.00" />
                            </div>
                            <small class="form-text text-muted">Only required for Lecturers</small>
                            <span asp-validation-for="HourlyRate" class="text-danger d-block"></span>
                        </div>

                        <hr class="my-4">

                        <h5 class="mb-3"><i class="bi bi-key-fill"></i> Login Credentials</h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Username" class="form-label"><strong>Username</strong></label>
                                    <input asp-for="Username" class="form-control" placeholder="e.g., jdoe" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Password" class="form-label"><strong>Password</strong></label>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i> <strong>Important:</strong> Make sure to save the username and password to provide to the user.
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Create User
                            </button>
                            <a asp-action="ManageUsers" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Role Descriptions</h5>
                </div>
                <div class="card-body">
                    <h6><span class="badge bg-info">Lecturer</span></h6>
                    <p class="small">Can submit and track claims</p>
                    
                    <h6><span class="badge bg-warning text-dark">Manager 1</span></h6>
                    <p class="small">Programme Coordinator - First level approval</p>
                    
                    <h6><span class="badge bg-warning text-dark">Manager 2</span></h6>
                    <p class="small">Academic Manager - Second level approval</p>
                    
                    <h6><span class="badge bg-danger">HR</span></h6>
                    <p class="small">Super User - Full system access and user management</p>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Show/hide hourly rate field based on role selection
        document.getElementById('roleSelect').addEventListener('change', function() {
            var hourlyRateGroup = document.getElementById('hourlyRateGroup');
            if (this.value === 'Lecturer') {
                hourlyRateGroup.style.display = 'block';
            } else {
                hourlyRateGroup.style.display = 'none';
            }
        });
    </script>
}
