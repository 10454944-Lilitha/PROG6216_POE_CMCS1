@model IEnumerable<CMCS1.Models.Claim>

@{
    ViewData["Title"] = "Approved Claims Report";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Approved Claims Report</h1>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>
    
    <!-- Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel-fill"></i> Filter Reports</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Reports">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="lecturerId" class="form-label"><strong>Lecturer</strong></label>
                            <select name="lecturerId" id="lecturerId" class="form-select">
                                <option value="">-- All Lecturers --</option>
                                @foreach (var lecturer in ViewBag.Lecturers)
                                {
                                    <option value="@lecturer.UserId" selected="@(ViewBag.SelectedLecturerId == lecturer.UserId)">
                                        @lecturer.FullName
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="fromDate" class="form-label"><strong>From Date</strong></label>
                            <input type="date" name="fromDate" id="fromDate" class="form-control" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="toDate" class="form-label"><strong>To Date</strong></label>
                            <input type="date" name="toDate" id="toDate" class="form-control" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group mb-3">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Filter
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Section -->
    <div class="alert alert-info shadow-sm">
        <div class="row">
            <div class="col-md-4">
                <h5><i class="bi bi-file-earmark-check-fill"></i> Total Claims</h5>
                <h3 class="mb-0">@Model.Count()</h3>
            </div>
            <div class="col-md-4">
                <h5><i class="bi bi-cash-stack"></i> Total Payment Amount</h5>
                <h3 class="mb-0">@Model.Sum(c => c.TotalAmount).ToString("C")</h3>
            </div>
            <div class="col-md-4">
                <h5><i class="bi bi-clock-fill"></i> Average Hours</h5>
                <h3 class="mb-0">@(Model.Any() ? Model.Average(c => c.HoursWorked).ToString("F2") : "0") hrs</h3>
            </div>
        </div>
    </div>

    <!-- Download PDF Button -->
    <div class="mb-3 text-end">
        <a asp-action="DownloadReportPdf" 
           asp-route-lecturerId="@ViewBag.SelectedLecturerId" 
           asp-route-fromDate="@ViewBag.FromDate" 
           asp-route-toDate="@ViewBag.ToDate" 
           class="btn btn-success btn-lg">
            <i class="bi bi-file-pdf-fill"></i> Download PDF Report
        </a>
    </div>

    <!-- Claims Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Submission Date</th>
                    <th>Approval Date</th>
                    <th>Manager 1</th>
                    <th>Manager 2</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>
                                <code>@claim.ClaimId.ToString().Substring(0, 8)</code>
                            </td>
                            <td>
                                <strong>@claim.Lecturer?.FullName</strong>
                            </td>
                            <td>@claim.HoursWorked hrs</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>
                                <strong class="text-success">@claim.TotalAmount.ToString("C")</strong>
                            </td>
                            <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                            <td>@claim.StatusUpdateDate?.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (claim.Manager1Approved)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle-fill"></i> @claim.Manager1ApprovalDate?.ToString("yyyy-MM-dd")
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </td>
                            <td>
                                @if (claim.Manager2Approved)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle-fill"></i> @claim.Manager2ApprovalDate?.ToString("yyyy-MM-dd")
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-2">No approved claims found matching your criteria.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="mt-4">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <button class="btn btn-outline-primary" onclick="window.print()">
            <i class="bi bi-printer-fill"></i> Print Report
        </button>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    @@media print {
        .btn, .card-header, nav, .alert { display: none !important; }
        .alert.alert-info { 
            display: block !important; 
            border: 1px solid #ccc; 
            background-color: #f8f9fa !important;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }
        .table { font-size: 10px; }
        h1 { font-size: 18px; }
    }
</style>
