@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>HR Dashboard - Super User</h1>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle"></i> <strong>Welcome, HR Manager!</strong> 
        You have full control over all users and can generate comprehensive reports.
    </div>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 border-primary">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="card-title">Manage All Users</h3>
                    <p class="card-text">Create, edit, and manage all system users including Lecturers, Managers, and HR staff.</p>
                    <a asp-action="ManageUsers" class="btn btn-primary btn-lg">
                        <i class="bi bi-gear-fill"></i> Manage Users
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 border-success">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-badge-fill text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="card-title">Manage Lecturers</h3>
                    <p class="card-text">Quick access to manage lecturer information and hourly rates specifically.</p>
                    <a asp-action="ManageLecturers" class="btn btn-success btn-lg">
                        <i class="bi bi-person-lines-fill"></i> Lecturer Management
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 border-warning">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-file-earmark-bar-graph-fill text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="card-title">Reports & Invoices</h3>
                    <p class="card-text">View approved claims, generate reports, and download PDF invoices for payments.</p>
                    <a asp-action="Reports" class="btn btn-warning btn-lg">
                        <i class="bi bi-download"></i> View Reports
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> HR Responsibilities</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>User Management:</strong> Create and update all user profiles with complete information (name, email, phone, hourly rate, credentials)
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Access Control:</strong> Provide login credentials to users - no self-registration allowed
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Reporting:</strong> Generate comprehensive reports and PDF invoices for approved claims
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Data Oversight:</strong> Full visibility and control over all system data and user information
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
