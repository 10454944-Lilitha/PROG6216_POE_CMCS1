@model List<CMCS1.Models.Claim>
@{
    ViewData["Title"] = "Review Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 style="color: #2c3e50;">All Claims - @ViewBag.CurrentUser</h2>
    <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary">Logout</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <p class="text-info text-center mt-4">No claims available.</p>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Notes</th>
                <th>Manager 1</th>
                <th>Manager 2</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                var currentManager = ViewBag.CurrentUser;
                var currentManagerApproved = (currentManager == "Manager1" && claim.Manager1Approved) || 
                                            (currentManager == "Manager2" && claim.Manager2Approved);
                
                <tr>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td><strong>@claim.TotalAmount.ToString("C")</strong></td>
                    <td>@(string.IsNullOrEmpty(claim.Notes) ? "N/A" : claim.Notes)</td>
                    <td>
                        @if (claim.Manager1Approved)
                        {
                            <span class="badge badge-success">
                                <i class="fas fa-check"></i> Approved
                            </span>
                            <br />
                            <small class="text-muted">@claim.Manager1ApprovalDate?.ToString("g")</small>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Pending</span>
                        }
                    </td>
                    <td>
                        @if (claim.Manager2Approved)
                        {
                            <span class="badge badge-success">
                                <i class="fas fa-check"></i> Approved
                            </span>
                            <br />
                            <small class="text-muted">@claim.Manager2ApprovalDate?.ToString("g")</small>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Pending</span>
                        }
                    </td>
                    <td>
                        <span class="badge badge-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : claim.Status == "Pending Approval" ? "warning" : "info")" style="color: black;">
                            @claim.Status
                        </span>
                    </td>
                    <td>
                        @if (currentManagerApproved)
                        {
                            <span class="text-success">
                                <i class="fas fa-check-circle"></i> You approved
                            </span>
                        }
                        else
                        {
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#feedbackModal-@claim.ClaimId">
                                <i class="fas fa-eye"></i> Review
                            </button>
                        }
                    </td>
                </tr>

                <!-- Feedback Modal -->
                <div class="modal fade" id="feedbackModal-@claim.ClaimId" tabindex="-1" aria-labelledby="modalLabel-@claim.ClaimId" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title" id="modalLabel-@claim.ClaimId">
                                    <i class="fas fa-clipboard-check"></i> Review Claim - @claim.TotalAmount.ToString("C")
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form asp-action="ApproveClaim" method="post">
                                @Html.AntiForgeryToken()
                                <div class="modal-body">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    
                                    <div class="card mb-3">
                                        <div class="card-header bg-light">
                                            <strong><i class="fas fa-user"></i> Claim Details</strong>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <strong>Hours Worked:</strong>
                                                    <p>@claim.HoursWorked hours</p>
                                                </div>
                                                <div class="col-md-4">
                                                    <strong>Hourly Rate:</strong>
                                                    <p>@claim.HourlyRate.ToString("C")</p>
                                                </div>
                                                <div class="col-md-4">
                                                    <strong>Total Amount:</strong>
                                                    <p class="text-success" style="font-size: 1.2em; font-weight: bold;">@claim.TotalAmount.ToString("C")</p>
                                                </div>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col-md-12">
                                                    <strong>Lecturer Notes:</strong>
                                                    <p>@(string.IsNullOrEmpty(claim.Notes) ? "No notes provided" : claim.Notes)</p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <strong>Submitted:</strong>
                                                    <p>@claim.SubmissionDate.ToString("g")</p>
                                                </div>
                                            </div>
                                            @if (claim.UploadedFileNames.Any())
                                            {
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <strong>Documents:</strong>
                                                        <ul>
                                                            @foreach (var doc in claim.UploadedFileNames)
                                                            {
                                                                <li>@doc</li>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <!-- Approval Status Card -->
                                    <div class="card mb-3 border-info">
                                        <div class="card-header bg-info text-white">
                                            <strong><i class="fas fa-users"></i> Approval Status</strong>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <strong>Manager 1:</strong>
                                                    @if (claim.Manager1Approved)
                                                    {
                                                        <span class="text-success">
                                                            <i class="fas fa-check-circle"></i> Approved
                                                            <br />
                                                            <small>@claim.Manager1ApprovalDate?.ToString("g")</small>
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-warning">
                                                            <i class="fas fa-clock"></i> Pending
                                                        </span>
                                                    }
                                                </div>
                                                <div class="col-md-6">
                                                    <strong>Manager 2:</strong>
                                                    @if (claim.Manager2Approved)
                                                    {
                                                        <span class="text-success">
                                                            <i class="fas fa-check-circle"></i> Approved
                                                            <br />
                                                            <small>@claim.Manager2ApprovalDate?.ToString("g")</small>
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-warning">
                                                            <i class="fas fa-clock"></i> Pending
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                            @if (claim.Manager1Approved && claim.Manager2Approved)
                                            {
                                                <div class="alert alert-success mt-3 mb-0">
                                                    <i class="fas fa-check-double"></i> <strong>Both managers have approved this claim!</strong>
                                                </div>
                                            }
                                            else if (claim.Manager1Approved || claim.Manager2Approved)
                                            {
                                                <div class="alert alert-warning mt-3 mb-0">
                                                    <i class="fas fa-hourglass-half"></i> <strong>Waiting for second manager approval</strong>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="feedback-@claim.ClaimId" class="font-weight-bold">
                                            <i class="fas fa-comment-dots"></i> Feedback (Optional)
                                        </label>
                                        <textarea id="feedback-@claim.ClaimId" name="feedback" class="form-control" rows="4" maxlength="1000" 
                                                  placeholder="Provide feedback for the lecturer about this claim..."></textarea>
                                        <small class="form-text text-muted">Maximum 1000 characters</small>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    @if (currentManagerApproved)
                                    {
                                        <div class="alert alert-info mb-0 mr-auto">
                                            <i class="fas fa-info-circle"></i> You have already reviewed this claim.
                                        </div>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                            <i class="fas fa-times"></i> Close
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" name="action" value="Approve" class="btn btn-success">
                                            <i class="fas fa-check-circle"></i> Approve Claim
                                        </button>
                                        <button type="submit" name="action" value="Reject" class="btn btn-danger">
                                            <i class="fas fa-times-circle"></i> Reject Claim
                                        </button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                            <i class="fas fa-ban"></i> Cancel
                                        </button>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        // Ensure modals work properly
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Review Claims page loaded');
            
            // Check if Bootstrap is loaded
            if (typeof bootstrap !== 'undefined') {
                console.log('Bootstrap 5 detected');
            } else if (typeof $.fn.modal !== 'undefined') {
                console.log('Bootstrap 4 with jQuery detected');
                
                // Convert Bootstrap 5 attributes to Bootstrap 4 for backward compatibility
                document.querySelectorAll('[data-bs-toggle="modal"]').forEach(function(element) {
                    element.setAttribute('data-toggle', 'modal');
                    var target = element.getAttribute('data-bs-target');
                    if (target) {
                        element.setAttribute('data-target', target);
                    }
                });
                
                document.querySelectorAll('[data-bs-dismiss="modal"]').forEach(function(element) {
                    element.setAttribute('data-dismiss', 'modal');
                });
            }
        });
    </script>
}
